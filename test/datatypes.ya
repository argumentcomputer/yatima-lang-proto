def Nat : Type =
  @self all
    (0 P : all Nat -> Type)
    (& zero : (P (lam P z s => z)))
    (& succ : all (pred : Nat) -> (P (lam P z s => s pred)))
    -> P self

def zero : Nat = lam P z s => z
def succ (n : Nat) : Nat = lam P z s => s n

def Ref (A : Type) : Type =
  @self all
    (0 P : all (x : Ref A) -> Type)
    (& box : all (val : A) -> (P (lam P t => t val)))
    -> P self

def box (0 A : Type) (val : A) : (Ref A) = lam P t => t val

def update (0 A : Type) (1 x : (Ref A)) (f : all A -> A) : (Ref A) =
  (x (lam x => Ref A) (lam val => (box A (f val))))
