package Nat where

{| The type of natural numbers |}
def Nat : Type =
  @self
  ∀ (0 P : ∀ (_:Nat) -> Type)
    (& zero : P (λ P z s => z))
    (& succ : ∀ (pred: Nat) -> (P (λ P z s => s pred)))
    -> P self

def zero : Nat
  = λ P z s => z

def succ (n : Nat) : Nat
  = λ P z s => s n

def one : Nat = succ zero

